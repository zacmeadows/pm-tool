<center>
  <% if @project.errors.any? %>
    <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_for @project do |f| %> 
    <%= f.label :title %> 
    <%= f.text_field :title %> 
    <br>
    <%= f.label :description %> 
    <%= f.text_area :description %>
    <br> 
    <%= f.label :due_date %> 
    <%= f.text_field :due_date %>
    <br>
    <%= f.label :projectmember_ids %>
    <%= f.collection_check_boxes :projectmember_ids, User.all, :id, :full_name %>
    <br>
    <%= f.submit %> 
  <% end %>
</center>