<h1><%= @project.title %></h1>
<p><%= @project.description %></p>
<h4>Due Date: <%= @project.due_date %></h4>
<!-- Add ability to display members of a project here -->
<p><%= link_to "Edit", edit_project_path(@project) %></p>
<p><%= link_to "Delete", project_path(@project), method: :delete, data: {confirm: "Are you sure you want to delete?"} %></p>
<hr>


<h1>Create a Task</h1>
<%= render "/tasks/form" %>
<hr>


<h1>Create a Discussion</h1>
<%= render "/discussions/form" %>
<hr>


<h1>Project Tasks</h1>
<% @project.tasks.each do |task| %> 
  <h3><%= task.title %></h3>
  <p>Body: <%= task.body %></p>
  <p>Date: <%= task.due_date %></p>
  <p><%= link_to "Edit", edit_project_task_path(@project, task) %></p>
  <p><%= link_to "Delete", project_task_path(@project, task), method: :delete, data: {confirm: "Are you sure you want to delete?"} %></p>
  <% if task.status == true %>
    <p><%= link_to "Done", toggle_task_path(task), method: :patch %></p>
  <% else %>
    <p><%= link_to "Not Done", toggle_task_path(task), method: :patch %></p>
  <% end %>
  <hr>

<% end %> 

<hr>

<h1>Project Discussions</h1>
<% @project.discussions.each do |discussion| %>
  <h2><%= link_to discussion.title, project_discussion_path(@project, discussion) %></h2>
<% end %>  
  

